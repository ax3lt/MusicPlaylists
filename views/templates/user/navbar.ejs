<script>
    function toggleTheme(theme) {
        if (theme === 'light') {
            fetch('/user/theme/light');
            document.body.setAttribute('data-bs-theme', 'light')
            $('#theme-changer').html(`
                            <div class="nav-link px-0" data-toggle="tooltip" data-placement="top"
                                 title="Abilita modalità scura"
                                 onclick="toggleTheme('dark')">
                                <div id="themeIcon">
                                    <svg xmlns="http://www.w3.org/2000/svg" class="icon icon-tabler icon-tabler-moon"
                                         width="24"
                                         height="24" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor"
                                         fill="none"
                                         stroke-linecap="round" stroke-linejoin="round">
                                        <path stroke="none" d="M0 0h24v24H0z" fill="none"></path>
                                        <path d="M12 3c.132 0 .263 0 .393 0a7.5 7.5 0 0 0 7.92 12.446a9 9 0 1 1 -8.313 -12.454z"></path>
                                    </svg>
                                </div>
                                &nbsp;&nbsp;
                            </div>
            `);
        } else {
            fetch('/user/theme/dark');
            document.body.setAttribute('data-bs-theme', 'dark');
            $('#theme-changer').html(`
                        <div class="nav-link px-0" data-toggle="tooltip" data-placement="top"
                             title="Abilita modalità chiara"
                             onclick="toggleTheme('light')">
